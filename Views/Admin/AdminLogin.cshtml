@{
    ViewBag.Title = "AdminLogin";
   
}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script src="~/ProjectJS/Admin.js/AdminLogin.js"></script>
<link href="~/Styles/Admin/AdminLogin.css" rel="stylesheet" />
 



<div class="container mt-5 d-flex justify-content-center">
    <div class="form-container p-4 shadow-lg rounded bg-white">
        <h2 class="text-center mb-4 text-dark fw-semibold">Administrator Login</h2>

        <div id="error-message" class="alert alert-danger d-none"></div>

        <form autocomplete="on">
            <div class="mb-3">
                <label for="email"  class="form-label"><strong>Email</strong></label>
                <input type="text" class="form-control" id="email1" name="email" placeholder="Enter your email" aria-label="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label"><strong>Password</strong></label>
                <input type="password" class="form-control" id="password1" name="password" placeholder="Enter your password" aria-label="Password" required>
            </div>

            <div class="mb-3">
                <button  id="btnLogin" class="btn btn-success w-100">Login</button>
            </div>

            <div class="text-center mt-3">
                <p class="mb-0">If you are not signed up, <a href="/Admin/AdminSignup" class="text-decoration-none">Signup</a> first.</p>
            </div>
        </form>
    </div>
</div>
