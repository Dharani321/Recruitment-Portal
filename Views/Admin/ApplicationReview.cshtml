@{
    Layout = null;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Styles/Admin/DatabaseManager.css" rel="stylesheet" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Section</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.bootstrap5.min.css">
</head>

<body>
    <div class="container mt-4">
        <h2 class="text-center text-primary">APlication Tracking System</h2>
        <div class="table-responsive shadow p-3 bg-white rounded">
            <table class="table table-striped table-hover table-bordered align-middle w-100" id="jobApplicationsTable">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Application ID</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>JobTitle</th>
                        
                        <th>Resume</th>
                        <th>Application Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="interviewModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Schedule Interview</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="applyId" />
                    <input type="hidden" id="userId" />
                    <input type="hidden" id="jobId" />

                    <div class="form-group">
                        <label>First Name:</label>
                        <input type="hidden" id="FastName" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input type="hidden" id="LastName" class="form-control" disabled />
                    </div><div class="form-group">
                        <label>Educational Details:</label>
                        <input type="text" id="EducationalDetails" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label>Experience:</label>
                        <input type="text" id="Experience" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label>Resume:</label>
                        <a id="resumeLink" href="#" target="_blank">View Resume</a>
                    </div>
                    <div class="form-group">
                        <label>Interview Date & Time:</label>
                        <input type="datetime-local" id="interviewDateTime" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Location:</label>
                        <input type="text" id="interviewLocation" class="form-control" placeholder="Enter Location" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="scheduleInterviewBtn">Arrange Interview</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Delete Confirmation Modal -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ProjectJS/Admin.js/ApplicationReview.js"></script>
</body>
</html>

