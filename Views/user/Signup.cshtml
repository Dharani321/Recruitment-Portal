

@{
    ViewBag.Title = "Signup";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registration</title>


    <!-- Bootstrap & Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/popperjs/core@2"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+VN:wght@100..400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Styles/user/Signup.css">
</head>
<body style="font-family: 'Poppins', sans-serif; background-color: #f8f9fa;">

    <div style="text-align: center; margin-top: 20px;">
        <h2 style="font-family: 'Poppins', sans-serif; font-weight: 700; color: #007bff; letter-spacing: 1px;">
            Recruitify
        </h2>
        <p style="font-size: 14px; font-weight: 500; color: #555;">
            Join Recruitify and take the next step in your career.
        </p>
    </div>

    <div id="show"></div>

    <div class="container1" style="max-width: 800px; margin: auto; background: #fff; padding: 30px; border-radius: 8px;">
        <h2 style="text-align: center; color: #333;">User Registration</h2>

        <div class="mainDiv" style="display: flex; justify-content: space-between; align-items: center; gap: 30px;">

            <!-- Left Section - Registration Form -->
            <form id="registrationForm" enctype="multipart/form-data" style="width: 55%;">
                <div class="form_element" style="margin-bottom: 15px;">
                    <label for="name" style="font-weight: 500;">First Name:</label>
                    <input type="text" id="name" name="FirstName" placeholder="Enter your first name" style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;"  required/>
                </div>
                <div class="form_element" style="margin-bottom: 15px;">
                    <label for="lastName" style="font-weight: 500;">Last Name:</label>
                    <input type="text" id="lastName" name="LastName" placeholder="Enter your last name" style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;"  required/>
                </div>
                <div class="form_element" style="margin-bottom: 15px;">
                    <label for="phone_no" style="font-weight: 500;">Phone No:</label>
                    <input type="text" id="phone_no" name="PhoneNumber" placeholder="Enter your phone number" style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;" required />
                </div>
                <div class="form_element" style="margin-bottom: 15px;">
                    <label for="email" style="font-weight: 500;">Email:</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;"  required/>
                </div>
                <div class="form_element" style="margin-bottom: 15px;">
                    <label for="password" style="font-weight: 500;">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;" required/>
                </div>

                <div class="form_element" style="margin-bottom: 15px;">
                    <label for="file_input" style="font-weight: 500;">Upload Image:</label>
                    <input type="file" name="file" id="file_input" accept="image/*" style="width: 100%; padding: 5px; margin-top: 5px;" required/>
                    <div id="image_preview" style="text-align: center; margin-top: 10px;">
                        <img id="preview_img" src="#" alt="Image Preview" style="display: none; max-width: 100%; height: auto; border-radius: 5px;" />
                    </div>
                </div>

                <div class="button_pos" style="text-align: center; margin-top: 20px;">
                    <button type="button" id="submit" value="Sign Up" style="background: #007bff; color: #fff; border: none; padding: 12px 30px; border-radius: 5px; font-size: 16px; cursor: pointer; transition: 0.3s; width: 100%;">
                        Sign Up
                    </button>
                </div>

                <div class="sign_up" style="text-align: center; margin-top: 15px;">
                    <h6 style="color: #555;">Want to go back?</h6>
                    <a href="@Url.Action("Index", "Home")" style="background: none; border: none; color: #007bff; font-weight: 500; cursor: pointer;">Go to Home</a>
                </div>

            </form>

            <!-- Right Section - Google Sign-Up -->
            <div style="width: 35%; text-align: center;">
                <h3 style="color: #777; margin-bottom: 20px;">OR</h3>
                <button style="display: flex; align-items: center; justify-content: center; gap: 10px; background: white; border: 1px solid #ccc; padding: 12px 20px; border-radius: 5px; font-size: 16px; cursor: pointer; width: 100%;">
                    <img src="/wwwroot/CustomImages/images (1).png" width="20" height="20" alt="Google Logo">
                    Continue with Google
                </button>
            </div>

        </div>
    </div>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="~/ProjectJS/user_js/JS/User_Signup_view.js"></script>

</body>

</html>

