
@{
    ViewBag.Title = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- Bootstrap 5 CSS & JS (Include in your project) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom Script -->
<script src="~/ProjectJS/user_js/JS/Profile.js"></script>


<!-- ----------------------------USER PROFILE SECTION------------------------------------ -->
<div class="container" style="position: relative; z-index: 1;">

    <!-- Profile container centered in the middle of the screen -->
    <div class="profile-container bg-white rounded-3 p-3" style="max-width: 56.25rem; margin-top: 5%; position: relative; left: 20%; z-index: 1; padding-left: 150px !important; padding-right: 150px !important; box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);">

        <!-- Profile Section -->
        <div class="profile-section">
            <h2 style="font-size: 24px; font-weight: bold; color: #333; text-align: center;"><span id="profile-firstname-placeholder">User  </span> <span id="profile-lastname-placeholder"> </span></h2>
            <div class="profile-details" style="margin-top: 20px;">
                <div class="profile-detail" style="display: flex; align-items: center; margin-bottom: 15px;">
                    <i class="fas fa-map-marker-alt" style="font-size: 20px; color: #555; margin-right: 10px;"></i>
                    <span id="profile-user-location" style="color: #555;">Location: Not Available</span>
                </div>
                <div class="profile-detail" style="display: flex; align-items: center; margin-bottom: 15px;">
                    <i class="fas fa-envelope" style="font-size: 20px; color: #555; margin-right: 10px;"></i>
                    <span id="profile-user-email" style="color: #555;">Email: Not Available</span>
                </div>
                <div class="profile-detail" style="display: flex; align-items: center; margin-bottom: 15px;">
                    <i class="fas fa-phone" style="font-size: 20px; color: #555; margin-right: 10px;"></i>
                    <span id="profile-user-phone" style="color: #555;">Phone: Not Available</span>
                </div>
            </div>
        </div>

        <!-- Resume Upload Section -->
        <div class="profile-resume-upload-section" style="margin-top: 40px;">
            <h3 style="font-size: 22px; font-weight: bold; color: #333;">Upload Your Resume</h3>
            <div class="profile-resume-upload-container" style="margin-top: 15px; display: flex; justify-content: space-between; align-items: center;">

                <i class="fas fa-file-alt" style="font-size: 20px; font-size:30px; margin-right: 5px;"></i>

                <input type="file" id="profile-resume-upload" class="profile-file-input" style="border: 1px solid #ccc; padding: 10px; border-radius: 5px; font-size: 16px;" />
                <button class="profile-upload-btn" style="background-color: #007bff; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; font-size: 16px;">Upload</button>
            </div>
            <div>
                <p style="font-size: 14px; color: #555; margin-top: 10px; text-align: left; margin-left: 45px;">(Only PDF, DOCX files with a size not exceeding 2MB are accepted.)</p>

            </div>
        </div>



        <div class="container mt-4">
            <h3 class="fw-bold text-dark">Improve Your Job Matches</h3>

            <div class="accordion mt-3" id="jobMatchesAccordion">

                <!-- Qualifications Section -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#qualificationsCollapse">
                            Add Qualifications
                        </button>
                    </h2>
                    <div id="qualificationsCollapse" class="accordion-collapse collapse" data-bs-parent="#jobMatchesAccordion">
                        <div class="accordion-body">
                            <label class="form-label">Enter your highest qualification:</label>
                            <input type="text" id="qualificationInput" class="form-control" placeholder="E.g., Bachelor's in Computer Science">
                          
                            
                            <div class="input-group mt-2" style="display: flex; align-items: center;">
                                <label class="form-label" style="margin-right: 10px;">Certificates:</label>
                                <input type="file" id="certUpload" accept=".jpg, .png, .docx" style="margin-right: 10px;">
                            </div>


                            <small class="text-muted">Formats : JPG, PNG, DOCX</small>
                        </div>
                        <div style="margin-bottom:20px; margin-left:20px;">
                            <button class="btn btn-primary mt-3" id="saveQualificationBtn">Save</button>
                        </div>
                    </div>
                </div>

                <!-- Job Preferences Section -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#preferencesCollapse">
                            Job Preferences
                        </button>
                    </h2>
                    <div id="preferencesCollapse" class="accordion-collapse collapse" data-bs-parent="#jobMatchesAccordion">
                        <div class="accordion-body">
                            <label class="form-label">Preferred Industry:</label>
                            <input type="text" class="form-control" placeholder="E.g., IT, Finance, Healthcare">

                            <label class="form-label mt-2">Preferred Job Role:</label>
                            <input type="text" class="form-control" placeholder="E.g., Software Engineer, Data Scientist">

                            <button class="btn btn-primary mt-3">Save</button>
                        </div>
                    </div>
                </div>

                <!-- Manage Bookmarks Section -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#bookmarksCollapse">
                            Manage Bookmarks
                        </button>
                    </h2>
                    <div id="bookmarksCollapse" class="accordion-collapse collapse" data-bs-parent="#jobMatchesAccordion">
                        <div class="accordion-body">
                            <label class="form-label">View or remove bookmarked jobs:</label>
                            <select class="form-control">
                                <option>Software Engineer - Google</option>
                                <option>Data Analyst - Amazon</option>
                                <option>Project Manager - Microsoft</option>
                            </select>
                            <button class="btn btn-danger mt-3">Remove Selected</button>
                        </div>
                    </div>
                </div>

                <!-- Add Keywords Section -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#keywordsCollapse">
                            Add Keywords
                        </button>
                    </h2>
                    <div id="keywordsCollapse" class="accordion-collapse collapse" data-bs-parent="#jobMatchesAccordion">
                        <div class="accordion-body">
                            <label class="form-label">Enter relevant job search keywords:</label>
                            <input type="text" class="form-control" placeholder="E.g., Machine Learning, Web Development">

                            <button class="btn btn-primary mt-3">Save</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


