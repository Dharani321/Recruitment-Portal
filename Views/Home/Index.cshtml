@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <!-- Custom Search bar-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.0.0-rc.4/dist/css/tom-select.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.0.0-rc.4/dist/js/tom-select.complete.min.js"></script>

    <!-- TomSelect CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.bootstrap5.min.css">

    <!-- TomSelect JS -->
    <script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>


    <title>Index-Main</title>
    <link href="~/Styles/Index.css" rel="stylesheet" />
    <script src="~/ProjectJS/Home/Index.js"></script>
</head>
<main style="background: transparent; font-family: 'Poppins', sans-serif; padding: 40px 20px;">
    <div class="divSupreme">
        <div class="mainDiv1">
            <!-- Job Listings Section -->
            <section class="container mt-5">
                <h2 class="text-center" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">Recently Posted Jobs</h2>
                <p class="text-center" style="font-size: 1.1rem; color: #555;">Explore the latest job listings and apply for your desired roles.</p>

                <div class="d-flex flex-wrap justify-content-center">
                    <!-- Job List Container -->
                    <div class="job-list-container flex-grow-1 me-3 p-4 rounded" style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 12px;">
                        <h4 style="font-family: 'Nunito', sans-serif;">Available Jobs</h4>
                        <p style="color: #777;">Click on a job to view details.</p>
                        <div id="jobList" class="job-list"></div>
                    </div>

                    <!-- Job Description Container -->
                    <div class="job-details-container flex-grow-1 p-4 rounded" style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 12px;">
                        <h4 style="font-family: 'Nunito', sans-serif;">Job Description</h4>
                        <p style="color: #777;">Select a job from the list to view its details.</p>
                        <div id="jobDescription" class="job-description">
                            <p>No job selected...</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Navigation Buttons -->
            <div class="text-center mt-4">
                <p style="color: #666; font-size: 1rem;">Use the arrows to navigate through job listings.</p>
                <button class="btn btn-dark mx-2" onclick="prevJobs()">&#10094; Previous</button>
                <button class="btn btn-dark mx-2" onclick="nextJobs()">Next &#10095;</button>
            </div>

        </div>
        <div class="mainDiv2">

            <!-- About Section -->
            <section id="about-section" class="hidden mt-5 about-container p-4 rounded" style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 12px;">
                <h2 class="text-center" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">About Us</h2>

                <div class="about-description text-center">
                    <p>Our Job Portal is a dynamic platform that connects job seekers and employers in the most efficient way. Whether you're looking for your dream job or searching for top talent to join your company, our portal provides an easy-to-use interface to make the process smooth and reliable.</p>
                </div>

                <div class="features mt-4">
                    <h4>Features</h4>
                    <ul>
                        <li><strong>For Job Seekers:</strong> Create a profile, search for job opportunities, apply to jobs, track applications, and receive job notifications tailored to your skills.</li>
                        <li><strong>For Admins:</strong> Post job openings, manage job statuses, review applications, communicate with candidates, and oversee smooth portal operations.</li>
                    </ul>
                </div>

                <div class="mission mt-4">
                    <h4>Our Mission</h4>
                    <p>We aim to bridge the gap between job seekers and employers, ensuring that both sides have the tools and resources they need to succeed. Our goal is to simplify the hiring process and provide the best platform for professional growth.</p>
                </div>
            </section>

        </div>

        <!--Contact Section-->
        <div class="mainDiv3">
            <div class="contact-container p-4 rounded" style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 12px;">
                <h4>Our Office:</h4>
                <address>
                    36/A New Alipur,<br />
                    Kolkata, India<br />
                    <abbr title="Phone">P:</abbr>
                    +91 8013539905 / +91 7362982792
                </address>

                <div class="map-container mt-3" style="border-radius: 12px; overflow: hidden;">
                    <iframe "
                            height="250"
                            style="border: 0; border-radius: 12px; width="100%;"
                            loading="lazy"
                            allowfullscreen
                            referrerpolicy="no-referrer-when-downgrade"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3683.828065320314!2d88.32393047484908!3d22.58500737950006!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a027711063d9ebd%3A0xbacb5dbb3d5de732!2sNew%20Alipore%2C%20Kolkata%2C%20West%20Bengal%20700053!5e0!3m2!1sen!2sin!4v1707493675723">
                    </iframe>
                </div>

                <h4 class="mt-3">Contact Us:</h4>
                <address>
                    <strong>Support:</strong> <a href="mailto:support@example.com" style="color: #007bff; text-decoration: none;">support@example.com</a><br />
                    <strong>Marketing:</strong> <a href="mailto:marketing@example.com" style="color: #007bff; text-decoration: none;">marketing@example.com</a><br />
                    <strong>General Inquiries:</strong> <a href="mailto:info@example.com" style="color: #007bff; text-decoration: none;">info@example.com</a>
                </address>
            </div>

        </div>
    </div>
 
</main>
