@{
    Layout = "~/Views/Shared/_EmployersLayout.cshtml";
    ViewBag.Title = "Employers";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap & Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Font Awesome 6 (Latest) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/Styles/Employers.css">

    <!-- Custom JS -->
    <script src="~/ProjectJS/Home/Employers.js"></script>
</head>
<body class="EmployersBody">
    <!-- Head Section -->
    <div class="container-fluid banner-section" style="background: linear-gradient(135deg, #0a2e57, #1e5799, #3a9ad9);
    background-size: cover !important;
    background-blend-mode: overlay;
    height: 500px !important;
    width: 100% !important;
    left:0 !important;
    right:0 !important;
    margin: 0 !important;
    box-shadow: inset 0 0 50px rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 !important;
    position: relative;">
   
        <div class="row align-items-center" id="hide" style="width: 90%;">

            <!-- Left Text Content -->
            <div class="col-md-6 text-white">
                <h5 class="text-uppercase">Recruitify for Employers</h5>
                <h1>Let’s hire your next great candidate. <em>Fast.</em></h1>
                <p>No matter the skills, experience, or qualifications you’re looking for, you’ll find the right people here.</p>
                <button class="btn btn-warning">Post a job</button>
            </div>

            <!-- Right Image Content -->
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <img src="~/wwwroot/CustomImages/Adobe Express - file.png" alt="Character Illustration"
                     style="width: 500px; height: 400px; object-fit: contain;  padding: 0px; top:50px;">
            </div>
        </div>
    </div>

    <!-- Features Panel -->
    <div class="features-panel" id="featuresPanel">
        <button class="close-btn" onclick="closePanel()">✖</button>
        <h5>Exclusive Features</h5>
        <ul>
            <li>Verified Candidates</li>
            <li>AI-Powered Matching</li>
            <li>Advanced Analytics</li>
        </ul>
    </div>


    <!-- Hiring Section Starts -->
    <div class="container mt-5" style="max-width: 900px; margin: auto; padding: 40px; background: #f8f9fa; border-radius: 12px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
        <div class="row align-items-center">
            <!-- Left Hiring Content -->
            <div class="col-md-12" style="text-align: center;">
                <h2 style="color: #0a2e57; font-size: 32px; font-weight: bold; margin-bottom: 20px;">Streamline Your Hiring with Recruitify</h2>
            </div>

            <div class="col-md-6" style="padding: 20px;">
                <h3 style="color: #1e5799; font-size: 24px; font-weight: 600; margin-bottom: 10px;">Post a Job</h3>
                <p style="color: #333; font-size: 18px;">Kickstart your hiring process with a job post. Recruitify connects you with <strong>millions of active job seekers</strong> every month.</p>

                <h3 style="color: #1e5799; font-size: 24px; font-weight: 600; margin-top: 20px;">Find the Right Talent</h3>
                <p style="color: #333; font-size: 18px;">Use advanced screening tools to filter applications and focus on the best-fit candidates.</p>

                <h3 style="color: #1e5799; font-size: 24px; font-weight: 600; margin-top: 20px;">Seamless Communication</h3>
                <p style="color: #333; font-size: 18px;">Engage with applicants via direct messaging, automated invites, and integrated interview scheduling.</p>
            </div>

            <div class="col-md-6" style="padding: 20px;">
                <h3 style="color: #1e5799; font-size: 24px; font-weight: 600; margin-bottom: 10px;">ATS (Application Tracking System)</h3>
                <p style="color: #333; font-size: 18px;">Automate resume parsing, track application status, and manage candidates effortlessly.</p>

                <h3 style="color: #1e5799; font-size: 24px; font-weight: 600; margin-top: 20px;">Database Manager</h3>
                <p style="color: #333; font-size: 18px;">Store and manage candidate profiles, job listings, and hiring history in an organized manner.</p>

                <h3 style="color: #1e5799; font-size: 24px; font-weight: 600; margin-top: 20px;">AI-Powered Insights</h3>
                <p style="color: #333; font-size: 18px;">Leverage AI-driven analytics to identify top candidates and predict hiring trends.</p>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Employers</h2>

        <div class="row justify-content-center">
            <!-- Want to Hire Card -->
            <div class="col-md-5">
                <div class="card hiring-card text-center p-4">
                    <h3 class="card-title">🚀 Want to Hire?</h3>
                    <p class="card-text">Post a job and attract top talent effortlessly. Find the best match for your company!</p>
                    <a href="login.html" class="btn btn-primary">Post a Job</a>
                </div>
            </div>

            <!-- Sort CVs Card -->
            <div class="col-md-5">
                <div class="card hiring-card text-center p-4">
                    <h3 class="card-title">📂 Sort CVs Instantly</h3>
                    <p class="card-text">Let AI-powered tools streamline your hiring process by sorting and ranking CVs for you!</p>
                    <a href="login.html" class="btn btn-success">Sort CVs</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <h3 class="text-center mb-4">Testimonials</h3>

        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <div class="d-flex justify-content-center">
                        <div class="card cardTestimonial p-3 mx-2 text-center" style="width: 18rem;">
                            <div class="testimonial-img-container">
                                <img src="#" class="testimonial-img" alt="User 1 Image">
                            </div>
                            <h5 class="mt-2">User 1</h5>
                            <p>"Amazing experience with this platform!"</p>
                            <div class="stars">★★★★★</div>
                        </div>

                        <div class="card cardTestimonial p-3 mx-2 text-center" style="width: 18rem;">
                            <div class="testimonial-img-container">
                                <img src="#" class="testimonial-img" alt="User 2 Image">
                            </div>
                            <h5 class="mt-2">User 2</h5>
                            <p>"Found the best candidates so easily!"</p>
                            <div class="stars">★★★★★</div>
                        </div>

                        <div class="card cardTestimonial p-3 mx-2 text-center" style="width: 18rem;">
                            <div class="testimonial-img-container">
                                <img src="#" class="testimonial-img" alt="User 3 Image">
                            </div>
                            <h5 class="mt-2">User 3</h5>
                            <p>"Highly recommend for recruitment!"</p>
                            <div class="stars">★★★★★</div>
                        </div>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item">
                    <div class="d-flex justify-content-center">
                        <div class="card cardTestimonial p-3 mx-2 text-center" style="width: 18rem;">
                            <div class="testimonial-img-container">
                                <img src="#" class="testimonial-img" alt="User 4 Image">
                            </div>
                            <h5 class="mt-2">User 4</h5>
                            <p>"Smooth hiring process!"</p>
                            <div class="stars">★★★★★</div>
                        </div>

                        <div class="card cardTestimonial p-3 mx-2 text-center" style="width: 18rem;">
                            <div class="testimonial-img-container">
                                <img src="#" class="testimonial-img" alt="User 5 Image">
                            </div>
                            <h5 class="mt-2">User 5</h5>
                            <p>"Great support from the team!"</p>
                            <div class="stars">★★★★★</div>
                        </div>

                        <div class="card cardTestimonial p-3 mx-2 text-center" style="width: 18rem;">
                            <div class="testimonial-img-container">
                                <img src="#" class="testimonial-img" alt="User 6 Image">
                            </div>
                            <h5 class="mt-2">User 6</h5>
                            <p>"Easy to use and effective!"</p>
                            <div class="stars">★★★★★</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carousel Indicators -->
            <div class="text-center mt-3">
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="0" class="active btn-dot"></button>
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="1" class="btn-dot"></button>
            </div>
        </div>
    </div>
</body>
</html>