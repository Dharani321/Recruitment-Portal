<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <!-- Bootstrap 5 and Popper.js (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Custom CSS -->
    <link href="~/Styles/EmployersLayout.css" rel="stylesheet">

    <!-- Font Awesome (Latest) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom JS -->
    <script src="~/ProjectJS/Shared/_EmployersLayout.js"></script>
</head>
<body>
 
        <!-- Navbar Section -->
        <nav class="navbar navbar-expand-lg navbar1" style="background-color: #1E3A8A;">
            <div class="container">
                <a href="/Home/Index" class="back-arrow" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Go back to Main Page?">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>

                <a class="navbar-brand" href="/Home/Employers" id="Layout_Home"
                   style="font-family: 'Lora', serif; font-style: normal; font-weight: 700; font-size: 24px; color: #ffffff !important; letter-spacing: 2px; text-transform: uppercase !important; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1) !important; transition: all 0.3s ease !important; display: block;">
                    Recruitify
                    <span style="display: block; font-family: Arial, sans-serif; font-size: 12px; font-weight: 400; color: #ffffff !important; text-transform: none;">
                        for Employers
                    </span>
                </a>

                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" id="Layout_Toggle"
                        style="border-color: #ffffff;">
                    <span class="navbar-toggler-icon" style="background-color: white;"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Post Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Find Resumes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fa-solid fa-question-circle"></i> Help Center
                            </a>
                        </li>

                        <!-- Signup Button & Login Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="btn btn-gradient dropdown-toggle glow-effect me-3" id="authDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Signup | Login
                            </a>
                            <ul class="dropdown-menu dropdown-fix" aria-labelledby="authDropdown">
                                <li>
                                    <button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#adminSignupModal">
                                        Signup
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#globalModal">
                                        Login
                                    </button>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
 


    <!-- Login Modal -->
    <div class="modal fade " id="globalModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <span style="font-family: 'Poppins', sans-serif; font-weight: 700; color: white; margin-left: 105px;letter-spacing: 15px">
                            Recruitify
                        </span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="container1">
                        <form>
                            <div class="loginTerms" style="font-family: 'Poppins', sans-serif; font-size: 14px; color: #555; text-align: center; line-height: 1.6; margin-top: 15px; padding: 10px 20px;">
                                <h2 style="font-size: 16px; font-weight: 600; color: #333; margin-bottom: 8px;">
                                    Create an account or log in.
                                </h2>
                                <p style="font-size: 14px; font-weight: 400; color: #666; max-width: 600px; margin: 0 auto;">
                                    By signing up or logging in, you acknowledge and agree to
                                    <span style="color: #007bff; font-weight: 500; cursor: pointer;">Recruitify's Terms of Service</span>.
                                    You also consent to our <span style="color: #007bff; font-weight: 500; cursor: pointer;">Privacy Policy</span>
                                    and <span style="color: #007bff; font-weight: 500; cursor: pointer;">Cookie Policy</span>. You may receive important updates
                                    and promotional messages from Recruitify, and you can opt out anytime by using the unsubscribe link in our emails or as outlined in our terms.
                                </p>
                            </div>

                            <div class="form_input_container">
                                <div class="form_input">
                                    <label class="loginEmail" for="email"><strong>Email:</strong></label>
                                    <label class="loginPassword" for="password"><strong>Password:</strong></label>
                                </div>
                                <div class="form_input">
                                    <input type="email" id="email" name="email" placeholder="Enter your email" />
                                    <input type="password" id="password" name="password" placeholder="Enter your password" />
                                </div>
                            </div>
                            <div class="button_pos">
                                <button type="submit" id="login" class="btn btn-primary">Login</button>
                            </div>
                            <div class="sign_up text-center mt-3">
                                <h6>Don't Have an Account?</h6>
                                <button type="button" id="signup" class="btn btn-link">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      </div>
     
    <!-- Signup Modal -->
    <div class="modal fade " id="adminSignupModal" tabindex="-1" aria-labelledby="adminSignupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content SignupModal-content">
                <div class="SignupModal-header">
                    <h5 class="SignupModal-title" id="adminSignupModalLabel">Administrator Signup</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form autocomplete="on">
                        <div class="text-center">
                            <img id="SignupImagePreview" src="#" style="display: block; width: 90px; height: 100px; object-fit: cover; border-radius: 50%; border: 2px solid #ddd; margin: 0 auto 20px;" />
                        </div>

                        <div class="mb-3">
                            <label for="FirstName" class="SignupForm-label"><strong>First Name</strong></label>
                            <input type="text" id="FirstName" name="FirstName" class="SignupForm-control" placeholder="(Admin’s first name)" required />
                        </div>

                        <div class="mb-3">
                            <label for="LastName" class="SignupForm-label"><strong>Last Name</strong></label>
                            <input type="text" id="LastName" name="LastName" class="SignupForm-control" placeholder="(Admin’s last name)" required />
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="SignupForm-label"><strong>Email</strong></label>
                            <input type="email" id="Email" name="Email" class="SignupForm-control" placeholder="(Give your Email)" required />
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="SignupForm-label"><strong>Password</strong></label>
                            <input type="password" id="Password" name="Password" class="SignupForm-control" placeholder="(Give a Password)" required />
                        </div>

                        <div class="mb-3">
                            <label for="DateOfBirth" class="SignupForm-label"><strong>Date of Birth</strong></label>
                            <input type="date" id="DateOfBirth" name="DateOfBirth" class="SignupForm-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="RoleType" class="SignupForm-label"><strong>Role Type</strong></label>
                            <input type="text" id="RoleType" name="RoleType" class="SignupForm-control" placeholder="(Admin's role or level)" required />
                        </div>

                        <div class="mb-3">
                            <label for="imageUpload" class="SignupForm-label"><strong>Upload Image</strong></label>
                            <input type="file" id="imageUpload" class="SignupForm-control" accept="image/*">
                        </div>
                    </form>
                </div>
                <div class="SignupModal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnsignup" class="btn btn-success">Signup</button>
                </div>
            </div>
        </div>
    </div>


    @RenderBody() <!-- This is where child views will be injected -->

    <hr/>
    <!-- Footer Section -->
    <footer class="custom-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Us</h5>
                    <p>Recruitify is your go-to platform for seamless hiring and career opportunities.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="footer-links">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Jobs</a></li>
                        <li><a href="#">Employers</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <hr>
            <p class="text-center">&copy; 2025 Recruitify. All rights reserved.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false) 

<script src="~/ProjectJS/Shared/_EmployersLayout.js"></script>

</body>
</html>